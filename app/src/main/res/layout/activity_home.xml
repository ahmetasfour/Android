<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    android:columnCount="2"
    android:orientation="horizontal"
    android:id="@+id/home"
    android:padding="16dp"
    android:rowCount="2"
    tools:context=".MainActivity">



    <!-- Cardio Training Section -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="navigateToCardio">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/run" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="10dp"
            android:padding="5dp"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="48"
            android:text="cardio training"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />
    </FrameLayout>

    <!-- Strength Training Section -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="navigateToStrength">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/push" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="10dp"
            android:padding="2dp"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="48"
            android:text="strength training"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />
    </FrameLayout>



    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="navigateToFlexibility">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/flex" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.001"
            android:lineSpacingExtra="12dp"
            android:padding="5dp"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="48"
            android:text="flexibility training"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />
    </FrameLayout>

    <!-- Balance Training Section -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="navigateToBalance">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/balance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="12dp"
            android:padding="5dp"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="48"
            android:text="balance training"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal|bold|italic" />
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_robot_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:onClick="playVideo"
        android:layout_marginTop="16dp"
        android:src="@drawable/vt"
        app:backgroundTint="@color/ssplash"
        app:elevation="1dp" />
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:visibility="gone" />


</GridLayout>
